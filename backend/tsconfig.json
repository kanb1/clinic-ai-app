{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "outDir": "dist", //fortæller TypeScript at alle kompilerede .js-filer skal placeres i backend/dist
    "rootDir": "src" //fortæller den at kildekoden ligger i src, så strukturen bliver som den er
  },
  "include": ["src", "src/config/jest.setup.ts"]
}
